#!/usr/bin/env node

const program = require('commander')
const package = require('../package.json')
const init = require('../lib/init')
const logger = require('../lib/logger')


// now, no options
program
  .usage('[options] <ProjectName>')
  .version(package.version)
  .option('init', 'generate initial project')
  .parse(process.argv)

if (program.init) {
  init(program.args[0])
  return
}

logger.error('Incorrect option, see usages with --help option plz.')
